<h1>Categories</h1>

<p>
  <%= link_to 'New Category', new_category_path, 
  class: 'btn btn-primary' if policy(:category).new? %>
</p>


<table class="table table-borderless table-hover">
  <thead>
    <tr>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Edit', edit_category_path(category), 
        class: "btn btn-secondary" if policy(category).edit? %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, 
        class:"btn btn-danger" if policy(category).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

