<h1><%= @article.title %></h1>


<p><%= @article.body %></p>

<ul>
    <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-dark' %>
    <%= link_to 'Delete', article_path(@article), 
        method: :delete,
        data: {confirm: 'Are you sure you want to delete? '},
        class: 'btn btn-danger' %>
    <%= link_to 'Back', root_path, class: 'btn btn-info' %>
</ul>
